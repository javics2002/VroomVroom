particle_system Particle/chispa
{
    material        Material/spark
    particle_width  40
    particle_height 40
    cull_each       false
    quota           25
    sorted          true
    billboard_type  oriented_self
    
    // Area emitter.
    emitter Point
    {
        angle           15
        emission_rate   75
        time_to_live    0.5
        //direction       0 10 10
        direction_position_reference 125 -150 0 1
        //duration 0.5
        //repeat_delay 1
        velocity_min    150
        velocity_max    300
        //colour_range_start  0 0 0
        //colour_range_end    1 1 1
        
    }
 
    // Gravity.
    affector LinearForce
    {
        force_vector      0 -100 0
        force_application add
    }
    affector ColourFader
    {
        alpha -1.5
    }

